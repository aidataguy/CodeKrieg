<section class="content-2 simple col-1 col-undefined ck-parallax-background ck-after-navbar" id="content5-77" style="background-image: url(https://images.unsplash.com/photo-1414146782248-462e06300dbf?crop=entropy&fit=crop&fm=jpg&h=800&ixjsv=2.1.0&ixlib=rb-0.3.5&q=80&w=1600);">
  <div class="ck-overlay" style="opacity: 0.6; background-color: rgb(0, 0, 0);"></div>
    <div class="container">
        <div class="row">
            <div>
                <div class="thumbnail">
                    <div class="caption">
                        <h3>CodeKrieg's Blog</h3>
                        <div><p><i class="fa fa-bookmark"></i> <%= @category.name %><br></p></div>
                        <% if logged_in? && current_user.admin? %>
                          <p><span class="badge"><%= link_to "Edit Category Name", edit_category_path(@category) %></span></p>  
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<% @article_category.each do |article|%>
  <section class="ck-section" id="header3-78">
    <div class="ck-section__container container ck-section__container--first">
        <div class="ck-header ck-header--wysiwyg row">
            <div class="col-sm-8 col-sm-offset-2">
                <h3 class="ck-header__text"><%= link_to article.title, article_path(article) %>&nbsp;</h3>
                <p class="ck-header__subtext">Author: <%= article.user.username %> </p>
                <p class="ck-header__subtext">
                	Created on <%= article.created_at.strftime("%b %e, %l:%M %p") %>,<br/>
                	Last updated on <%= article.updated_at.strftime("%b %e, %l:%M %p") %>
                </p>
            </div>
        </div>
    </div>
	</section>
  
  <section class="ck-section" id="content1-79">
	    <div class="ck-section__container container ck-section__container--middle">
	        <div class="row">
	            <div class="ck-article ck-article--wysiwyg col-sm-8 col-sm-offset-2">
	            	<p>
									<%= truncate(article.content, length: 500) { link_to "Continue", article_path(article) } %>
	            	</p>
							</div>
	        </div>
	    </div>
	</section>
  
  <section class="ck-section" id="image2-83">
    <div class="ck-section__container container ck-section__container--middle">
        <div class="row">
            <div class="col-sm-8 col-sm-offset-2">
                <figure class="ck-figure ck-figure--wysiwyg ck-figure--full-width ck-figure--caption-inside-bottom">
                    <div><%=image_tag article.image.url(:big), class: "ck-figure__img" %></div>
                </figure>
            </div>
        </div>
    </div>
	</section>
<% end %>