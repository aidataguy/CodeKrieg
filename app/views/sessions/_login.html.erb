<a class="btn btn-link-1 launch-modal" href="#" data-modal-id="modal-login">Modal Login</a>

<!-- MODAL -->

<div class="modal fade" id="modal-login" tabindex="-1" role="dialog" aria-labelledby="modal-login-label" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal">
					<span aria-hidden="true">&times;</span><span class="sr-only">Close</span>
				</button>
				<h3 class="modal-title" id="modal-login-label">Login on CodeKrieg</h3>
				<p>Enter your username and password to sign in</p>
			</div>
			
			<div class="modal-body">
				
        <%= form_for(:session, :html => {class: "form-horizontal", role: "form"}, url: login_path) do |f| %>
        	<div class="form-group">
        		<%= f.label :email %>
        		<%= f.email_field :email, class: "form-control form-username", placeholder: "Enter email", autofocus: true %>
            </div>
            <div class="form-group">
            	<%= f.label :password %>
            	<%= f.password_field :password, class: "form-password form-control", autocomplete: "off" %>
            </div>
            <button type="submit" class="btn-form">Sign in!</button>
        <% end %>
              
			</div>
			
		</div>
	</div>
</div>