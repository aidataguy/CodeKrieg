<div class="container padding-top-form">
  
  <%= form_for @contact, :html => { multipart: true, :class => "form-horizontal build" } do |f| %>
  
    <% if @contact.errors.any? %>
      <div id="error_expl" class="panel panel-danger">
        <div class="panel-heading">
          <h3 class="panel-title"><%= pluralize(@contact.errors.count, "error") %> prohibited this email from being sent:</h3>
        </div>
        <div class="panel-body">
          <ul>
          <% @contact.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      </div>
    <% end %>
    
    <!-- Name -->

      <div class="form-group">
  <%= f.label :name, :class => 'control-label' %>
  
    <%= f.text_field :name, required: true, :class => 'form-control' %>
  <%=f.error_span(:name) %>
</div>

<!-- Email -->
<div class="form-group">
  <%= f.label :email, :class => 'control-label' %>
    <%= f.email_field :email, required: true, :class => 'form-control' %>
  <%= f.error_span(:email) %>
</div>

<!-- Warning-->
<div class="form-group">
    <div align="center" class="alert alert-warning middle">
      <p><strong>Warning!</strong> please do not use any <strong>yahoo.com</strong> emails since we won't be able to receive them. <br>
        Thank you very much and we are sorry for any inconvenience this might produce!</p>
    </div>
</div>
<!-- Message -->
<div class="form-group">
  <%= f.label :message, :class => 'control-label' %>
    <%= f.text_area :message, as: :text, :class => 'form-control' %>
  <%=f.error_span(:message) %>
</div>

<div class="form-group hidden">
  <%= f.label :nickname %>
    <%= f.text_field :nickname, hint: 'Leave this field blank!' %>
</div>

<!-- Submit -->
<div class="form-group">
    <%= f.submit 'Submit message', :class => 'btn btn-primary' %>
</div>    
  <% end %>
</div>