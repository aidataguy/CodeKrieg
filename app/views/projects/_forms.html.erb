<%= form_for(@project, :html => {class: "form-horizontal", role: "form", multipart: true}) do |f| %>
      <% @project.errors.full_messages.each do |msg| %>
      <p><%= msg %></p>
    <% end %>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :project_title %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :project_title, class: "form-control", placeholder: "Title of project", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :project_url %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :project_url, class: "form-control", placeholder: "Title of project", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <p>
            <%= f.label :Featured %> Image
          </p>
        </div>
        <div class="col-sm-8">
          <%= f.file_field :project_image %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :project_content %>
        </div>
        <div class="col-sm-8" id="bootsy-image">
          <%= f.bootsy_area :project_content, class: "form-control", placeholder: "Body of project" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit class: 'btn btn-primary btn-lg' %>
        </div>
      </div>
    <% end %>
    <div class="col-xs-4 col-xs-offset-4">
      [ <%= link_to "Cancel request and return to projects listing", projects_path %> ]
    </div>