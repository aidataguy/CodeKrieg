<% @project.each do |project| %>
	<section class="ck-section" id="header3-78">
	    <div class="ck-section__container container ck-section__container--first">
	        <div class="ck-header ck-header--wysiwyg row">
	            <div class="col-sm-8 col-sm-offset-2">
	                <h3 class="ck-header__text"><%= link_to project.project_title, project_path(project) %>&nbsp;</h3>
	                <p class="ck-header__subtext">Author: <%= project.user.username %> </p>
	                <p class="ck-header__subtext">
	                	Created on <%= project.created_at.strftime("%b %e, %l:%M %p") %>,<br/>
	                	Last updated on <%= project.updated_at.strftime("%b %e, %l:%M %p") %>
	                </p>
	            </div>
	        </div>
	    </div>
	</section>
	
	<section class="ck-section" id="content1-79">
	    <div class="ck-section__container container ck-section__container--middle">
	        <div class="row">
	            <div class="ck-project ck-project--wysiwyg col-sm-8 col-sm-offset-2">
	            	<p>
									<%= truncate(project.project_content, length: 500) { link_to "Continue", project_path(project) } %>
	            	</p>
							</div>
	        </div>
	    </div>
	</section>
	
	<section class="ck-section" id="image2-83">
	    <div class="ck-section__container container ck-section__container--middle">
	        <div class="row">
	            <div class="col-sm-8 col-sm-offset-2">
	                <figure class="ck-figure ck-figure--wysiwyg ck-figure--full-width ck-figure--caption-inside-bottom">
	                    <div><%= image_tag project.project_image.url(:big), class: "ck-figure__img" %></div>
	                </figure>
	            </div>
	        </div>
	    </div>
	</section>

<% end %>



